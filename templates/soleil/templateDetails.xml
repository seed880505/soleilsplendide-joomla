<?xml version="1.0" encoding="utf-8"?>
<extension version="3.8" type="template" client="site">
    <name>soleil</name>
    <version>2.0</version>
    <creationDate>03/08/2018</creationDate>
    <author>Chenglong GUO</author>
    <authorEmail>chenglong.guo@foxmail.com</authorEmail>
    <copyright>Copyright (C) 2016 - 2018 Open Source Matters, Inc. All rights reserved.</copyright>
    <description>TPL_SOLEIL_XML_DESCRIPTION</description>
    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>img</folder>
        <folder>js</folder>
        <folder>language</folder>
        <folder>scss</folder>
    </files>
    <positions>
        <position>menu</position>
        <position>mostreadarticle</position>
        <position>lastestarticle</position>
        <position>footer</position>
        <position>search</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_soleil.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_soleil.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                        name="templateColor"
                        type="color"
                        label="TPL_SOLEIL_COLOR_LABEL"
                        description="TPL_SOLEIL_COLOR_DESC"
                        class=""
                        default="#08C"
                />
                <field
                        name="templateBackgroundColor"
                        type="color"
                        label="TPL_SOLEIL_BACKGROUND_COLOR_LABEL"
                        description="TPL_SOLEIL_BACKGROUND_COLOR_DESC"
                        class=""
                        default="#F4F6F7"
                />
                <field
                        name="logoFile"
                        class=""
                        type="media"
                        default=""
                        label="TPL_SOLEIL_LOGO_LABEL"
                        description="TPL_SOLEIL_LOGO_DESC"
                />
                <field
                        name="sitetitle"
                        type="text"
                        default=""
                        label="JGLOBAL_TITLE"
                        description="JFIELD_ALT_PAGE_TITLE_LABEL"
                        filter="string"
                />
                <field
                        name="sitedescription"
                        type="text"
                        default=""
                        label="JGLOBAL_DESCRIPTION"
                        description="JGLOBAL_SUBHEADING_DESC"
                        filter="string"
                />
                <field
                        name="fluidContainer"
                        type="radio"
                        label="TPL_SOLEIL_FLUID_LABEL"
                        description="TPL_SOLEIL_FLUID_DESC"
                        class="btn-group btn-group-yesno"
                        default="0"
                >
                    <option value="1">TPL_SOLEIL_FLUID</option>
                    <option value="0">TPL_SOLEIL_STATIC</option>
                </field>
                <field name="codeHighlight"
                       type="radio"
                       class="btn-group btn-group-yesno"
                       default="1"
                       label="TPL_SOLEIL_CODE_HIGHLIGHT_LABEL"
                       description="TPL_SOLEIL_CODE_HIGHLIGHT_DESC"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
